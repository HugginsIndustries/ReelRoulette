                                    <MenuItem.Icon>
                                        <TextBlock Text="â˜…"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Add to Blacklist"
                                         Click="ContextMenu_AddToBlacklist_Click">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ‘Ž"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem x:Name="ContextMenu_RemoveFromBlacklistMenuItem"
                                         Header="Remove from Blacklist"
                                         Click="ContextMenu_RemoveFromBlacklist_Click">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ‘Ž"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Add Tags..."
                                         Click="ContextMenu_AddTags_Click">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ·ï¸"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <MenuItem x:Name="ContextMenu_RemoveTagsMenuItem"
                                         Header="Remove Tags..."
                                         Click="ContextMenu_RemoveTags_Click">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ·ï¸"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Remove from Library"
                                         Click="ContextMenu_RemoveFromLibrary_Click">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ—‘ï¸"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                                <Separator/>
                                <MenuItem Header="Clear Playback Stats"
                                         Click="ContextMenu_ClearStats_Click">
                                    <MenuItem.Icon>
                                        <TextBlock Text="ðŸ“Š"/>
                                    </MenuItem.Icon>
                                </MenuItem>
                            </ContextMenu>
                        </ListBox.ContextMenu>
                        <ListBox.ItemsPanel>
                            <ItemsPanelTemplate>
                                <VirtualizingStackPanel />
                            </ItemsPanelTemplate>
                        </ListBox.ItemsPanel>
                        <ListBox.ItemTemplate>
                            <DataTemplate DataType="local:LibraryItem">
                                <Grid ColumnDefinitions="* Auto Auto Auto Auto Auto" Margin="0,4,16,4">
                                    <StackPanel Grid.Column="0" Orientation="Vertical">
                                        <TextBlock Text="{Binding FileName}"
                                                   FontWeight="SemiBold"
                                                   TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding FullPath}"
                                                   FontSize="10"
                                                   Foreground="Gray"
                                                   TextTrimming="CharacterEllipsis"/>
                                    </StackPanel>
                                    <Button Grid.Column="1"
                                            Classes="IconMomentarySmall"
                                            Margin="4,0,2,0"
                                            ToolTip.Tip="Play this video"
                                            Tag="{Binding FullPath}"
                                            Click="LibraryItemPlay_Click">
                                        <TextBlock Text="â–¶ï¸"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Button>
                                    <Button Grid.Column="2"
                                            Classes="IconMomentarySmall"
                                            Margin="2,0,2,0"
                                            ToolTip.Tip="Show in file manager"
                                            Tag="{Binding FullPath}"
                                            Click="LibraryItemShowInFileManager_Click">
                                        <TextBlock Text="ðŸ“"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Button>
                                    <ToggleButton Grid.Column="3"
                                                 Classes="IconToggleSmall"
                                                 Margin="2,0,2,0"
                                                 ToolTip.Tip="Toggle favorite"
                                                 IsChecked="{Binding IsFavorite}"
                                                 Tag="{Binding}"
                                                 Checked="LibraryItemFavorite_Changed"
                                                 Unchecked="LibraryItemFavorite_Changed">
                                        <TextBlock Text="â˜…"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </ToggleButton>
                                    <ToggleButton Grid.Column="4"
                                                 Classes="IconToggleSmall"
                                                 Margin="2,0,2,0"
                                                 ToolTip.Tip="Toggle blacklist"
                                                 IsChecked="{Binding IsBlacklisted}"
                                                 Tag="{Binding}"
                                                 Checked="LibraryItemBlacklist_Changed"
                                                 Unchecked="LibraryItemBlacklist_Changed">
                                        <TextBlock Text="ðŸ‘Ž"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </ToggleButton>
                                    <Button Grid.Column="5"
                                            Classes="IconMomentarySmall"
                                            Margin="2,0,2,0"
                                            ToolTip.Tip="Manage tags"
                                            Tag="{Binding}"
                                            Click="LibraryItemTags_Click">
                                        <TextBlock Text="ðŸ·"
                                                   TextAlignment="Center"
                                                   HorizontalAlignment="Center"
                                                   VerticalAlignment="Center"/>
                                    </Button>
                                </Grid>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                    </ListBox>
                </Grid>
            </Border>

            <!-- Column 1: Splitter between Library and Video -->
            <GridSplitter x:Name="LibraryVideoSplitter"
                         Grid.Column="1"
                         Width="4"
                         ResizeDirection="Columns"
                         ResizeBehavior="PreviousAndNext"
                         Background="Gray"
                         IsVisible="False"/>

            <!-- Column 2: Video View Container -->
            <Border x:Name="VideoViewContainer"
                    Grid.Column="2"
                    BorderBrush="Gray"
                    BorderThickness="0"
                    Padding="0"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch">
                <Grid>
                    <!-- VideoView for videos -->
                    <vlc:VideoView x:Name="VideoView"
                                   HorizontalAlignment="Stretch"
                                   VerticalAlignment="Stretch"
                                   PointerWheelChanged="VideoView_PointerWheelChanged"/>
                    
                    <!-- Image overlay for photos -->
                    <Image x:Name="PhotoImageView"
                           HorizontalAlignment="Stretch"
                           VerticalAlignment="Stretch"
                           Stretch="Uniform"
                           IsVisible="False"/>
                </Grid>
            </Border>

            <!-- Column 3: Stats Panel -->
            <Border x:Name="StatsPanelContainer"
                    Grid.Column="3"
                    BorderBrush="Gray"
                    BorderThickness="0"
                    Padding="8"
                    MinWidth="270"
                    MaxWidth="270"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    IsVisible="False">
                <Grid RowDefinitions="Auto *" VerticalAlignment="Stretch">
                    <TextBlock Text="Global Stats"
                               Grid.Row="0"
                               FontWeight="Bold"
                               FontSize="16"
                               Margin="0,0,0,8"/>
                    <ScrollViewer Grid.Row="1" 
                                  VerticalScrollBarVisibility="Auto"
                                  HorizontalScrollBarVisibility="Disabled"
                                  VerticalAlignment="Stretch">
                        <StackPanel Spacing="8" x:DataType="local:MainWindow">
                            <!-- Library Totals -->
                            <TextBlock Text="Library Totals"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Margin="0,0,0,2"/>
                            <TextBlock Text="{Binding GlobalTotalVideosKnown, StringFormat='Total videos: {0}'}"/>
                            <TextBlock Text="{Binding GlobalTotalPhotosKnown, StringFormat='Total photos: {0}'}"/>
                            <TextBlock Text="{Binding GlobalTotalMediaKnown, StringFormat='Total media: {0}'}"/>
                            
                            <!-- Playback Statistics -->
                            <TextBlock Text="Playback Statistics"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Margin="0,8,0,2"/>
                            <TextBlock Text="{Binding GlobalTotalPlays, StringFormat='Total plays (all time): {0}'}"/>
                            <TextBlock Text="{Binding GlobalUniqueVideosPlayed, StringFormat='Unique videos played: {0}'}"/>
                            <TextBlock Text="{Binding GlobalUniquePhotosPlayed, StringFormat='Unique photos played: {0}'}"/>
                            <TextBlock Text="{Binding GlobalUniqueMediaPlayed, StringFormat='Unique media played: {0}'}"/>
                            
                            <!-- Never Played -->
                            <TextBlock Text="Never Played"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Margin="0,8,0,2"/>
                            <TextBlock Text="{Binding GlobalNeverPlayedVideosKnown, StringFormat='Never played videos: {0}'}"/>
                            <TextBlock Text="{Binding GlobalNeverPlayedPhotosKnown, StringFormat='Never played photos: {0}'}"/>
                            <TextBlock Text="{Binding GlobalNeverPlayedMediaKnown, StringFormat='Never played media: {0}'}"/>
                            
                            <!-- Library Management -->
                            <TextBlock Text="Library Management"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Margin="0,8,0,2"/>
                            <TextBlock Text="{Binding GlobalFavoritesCount, StringFormat='Favorites: {0}'}"/>
                            <TextBlock Text="{Binding GlobalBlacklistCount, StringFormat='Blacklisted: {0}'}"/>
                            
                            <!-- Video Audio Stats -->
                            <TextBlock Text="Video Audio Stats"
                                       FontWeight="Bold"
                                       FontSize="14"
                                       Margin="0,8,0,2"/>
                            <TextBlock Text="{Binding GlobalVideosWithAudio, StringFormat='Videos with audio: {0}'}"/>
                            <TextBlock Text="{Binding GlobalVideosWithoutAudio, StringFormat='Videos without audio: {0}'}"/>
                            
                            <!-- Current File Stats Section -->
                            <TextBlock Text="Current File"
                                       FontWeight="Bold"
                                       FontSize="16"
                                       Margin="0,16,0,8"/>
                            <TextBlock Text="{Binding CurrentVideoFileName, StringFormat='File: {0}'}"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding CurrentVideoFullPath}"
                                       FontSize="10"
                                       Foreground="Gray"
                                       TextWrapping="Wrap"/>
                            <TextBlock Text="{Binding CurrentVideoPlayCount, StringFormat='Plays: {0}'}"/>
                            <TextBlock Text="{Binding CurrentVideoLastPlayedDisplay, StringFormat='Last played: {0}'}"/>
                            <TextBlock Text="{Binding CurrentVideoIsFavoriteDisplay, StringFormat='Favorite: {0}'}"/>
                            <TextBlock Text="{Binding CurrentVideoIsBlacklistedDisplay, StringFormat='Blacklisted: {0}'}"/>
                            <TextBlock Text="{Binding CurrentVideoDurationDisplay, StringFormat='Duration: {0}'}"
                                       IsVisible="{Binding IsCurrentFileVideo}"/>
                            <TextBlock Text="{Binding CurrentVideoHasAudioDisplay, StringFormat='Has audio: {0}'}"
                                       IsVisible="{Binding IsCurrentFileVideo}"/>
                            <TextBlock Text="{Binding CurrentVideoLoudnessDisplay, StringFormat='Loudness: {0}'}"
                                       IsVisible="{Binding IsCurrentFileVideo}"/>
                            <TextBlock Text="{Binding CurrentVideoPeakDisplay, StringFormat='Peak: {0}'}"
                                       IsVisible="{Binding IsCurrentFileVideo}"/>
                            <TextBlock Text="{Binding CurrentVideoTagsDisplay, StringFormat='Tags: {0}'}"
                                       TextWrapping="Wrap"/>
                        </StackPanel>
                    </ScrollViewer>
                </Grid>
            </Border>
            </Grid>
        </Border>
    </Grid>
</Window>
