<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:ReelRoulette"
        x:Class="ReelRoulette.ManageSourcesDialog"
        x:DataType="local:ManageSourcesDialog"
        Title="Manage Library Sources"
        Width="700"
        Height="600"
        WindowStartupLocation="CenterOwner"
        MinWidth="600"
        MinHeight="400">
    <Grid RowDefinitions="Auto * Auto" Margin="12">
        <!-- Header -->
        <TextBlock Grid.Row="0" 
                   Text="Manage Library Sources"
                   FontWeight="Bold"
                   FontSize="16"
                   Margin="0,0,0,16"/>

        <!-- Sources List -->
        <Border Grid.Row="1"
                BorderBrush="{DynamicResource ThemeBorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Padding="8"
                Margin="0,0,0,16">
            <Grid RowDefinitions="Auto *">
                <TextBlock Grid.Row="0"
                           Text="Your Library Sources"
                           FontWeight="SemiBold"
                           FontSize="13"
                           Margin="0,0,0,8"/>
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl x:Name="SourcesItemsControl">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate DataType="local:SourceViewModel">
                                <Border BorderBrush="Gray"
                                        BorderThickness="0,0,0,1"
                                        Padding="8"
                                        Margin="0,4">
                                    <Grid RowDefinitions="Auto Auto Auto Auto" ColumnDefinitions="* Auto">
                                        <!-- Row 0: Name and Enable/Disable Toggle -->
                                        <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Vertical" Margin="0,0,8,4">
                                            <TextBlock Text="{Binding DisplayName}"
                                                       FontWeight="SemiBold"
                                                       FontSize="14"/>
                                            <TextBlock Text="{Binding RootPath}"
                                                       FontSize="11"
                                                       Foreground="Gray"
                                                       TextTrimming="CharacterEllipsis"
                                                       Margin="0,2,0,0"/>
                                        </StackPanel>
                                        
                                        <ToggleButton Grid.Row="0" Grid.Column="1"
                                                      x:Name="EnableToggle"
                                                      IsChecked="{Binding IsEnabled}"
                                                      Content="{Binding IsEnabledText}"
                                                      ToolTip.Tip="Enable/Disable source"
                                                      Width="80"
                                                      Height="32"
                                                      Margin="4"
                                                      Tag="{Binding Id}"
                                                      Click="EnableToggle_Click"/>
                                        
                                        <!-- Row 1: Statistics -->
                                        <StackPanel Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" 
                                                    Orientation="Horizontal" 
                                                    Spacing="12"
                                                    Margin="0,4,0,8">
                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="ðŸŽžï¸"/>
                                                <Run Text="{Binding Statistics.TotalVideos}"/>
                                                <Run Text="videos"/>
                                            </TextBlock>
                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="â±ï¸"/>
                                                <Run Text="{Binding Statistics.TotalDurationFormatted}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="ðŸ”Š"/>
                                                <Run Text="{Binding Statistics.VideosWithAudio}"/>
                                            </TextBlock>
                                            <TextBlock FontSize="12" Foreground="Gray">
                                                <Run Text="ðŸ”‡"/>
                                                <Run Text="{Binding Statistics.VideosWithoutAudio}"/>
                                            </TextBlock>
                                        </StackPanel>
                                        
                                        <!-- Row 2: Action Buttons -->
                                        <StackPanel Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2"
                                                    Orientation="Horizontal"
                                                    Spacing="8">
                                            <Button Content="Rename"
                                                    MinWidth="80"
                                                    Tag="{Binding Id}"
                                                    Click="RenameButton_Click"/>
                                            <Button Content="Refresh"
                                                    MinWidth="80"
                                                    Tag="{Binding Id}"
                                                    Click="RefreshButton_Click"/>
                                            <Button Content="Remove"
                                                    MinWidth="80"
                                                    Tag="{Binding Id}"
                                                    Click="RemoveButton_Click"
                                                    Foreground="Red"/>
                                        </StackPanel>
                                    </Grid>
                                </Border>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Footer -->
        <StackPanel Grid.Row="2" 
                    Orientation="Horizontal" 
                    HorizontalAlignment="Right"
                    Spacing="8">
            <Button Content="Close"
                    MinWidth="80"
                    Click="CloseButton_Click"/>
        </StackPanel>
    </Grid>
</Window>

